    .{{ class }} {
        {%- if background != "transparent" -%}
            {%- if background_gradient != blank -%}
                background: {{ background_gradient }};
            {% else %}
                background: {{ background }};
            {%- endif -%}
        {%- endif -%}

        {%- if background_gradient != blank -%}
            background: {{ background_gradient }};
        {% endif %}

        {%- if border_width != 0 -%}
            border: {{ border_width }}px solid {{ border_color }};
        {%- endif -%}

        {%- if border_radius != blank -%}
            border-radius: {{ border_radius }}px;
        {%- endif -%}

        {%- if text_color != "transparent" and text_color != blank -%}
            color: {{ text_color }};  
        {%- endif -%}

        {% assign font_size = height_button | divided_by: 1.5 %}
        {%- if height_button != blank -%}
            padding-bottom: {{ height_button }}px;
            padding-top: {{ height_button }}px;
            font-size: {{ font_size }}px;
        {%- endif -%}

        font-family: {{ section.settings.font_family_par.family }}, {{ section.settings.font_family_par.fallback_families }};

    }

   .{{ class }}:hover {
        {%- if background_hovered != "transparent" -%}
            {%- if background_gradient_hovered != blank -%}
                background: {{ background_gradient_hovered }};
            {% else %}
                background: {{ background_hovered }};
            {%- endif -%}
        {%- endif -%}

        {%- if background_gradient_hovered != blank -%}
            background: {{ background_gradient_hovered }};
        {%- endif -%}

        {%- if text_color_hovered != "transparent" and text_color_hovered != blank -%}
            color: {{ text_color_hovered }};
        {%- endif -%}

        {%- if border_color_hovered != blank -%}
            border-color: {{ border_color_hovered }};
        {%- endif -%}

    }